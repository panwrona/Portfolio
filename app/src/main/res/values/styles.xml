<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="colorAccent">@color/colorDotActive</item>
	</style>

	<style name="TextAppearance.LobsterBold" parent="android:TextAppearance">
		<item name="fontPath">fonts/lobster-bold.ttf</item>
	</style>

	<style name="TextAppearance.LobsterRegular" parent="android:TextAppearance">
		<item name="fontPath">fonts/lobster-regular.ttf</item>
	</style>

	<style name="dotsStyle">
		<item name="android:layout_width">13dp</item>
		<item name="android:layout_height">13dp</item>
		<item name="android:background">@drawable/dots_inactive</item>
	</style>

</resources>
