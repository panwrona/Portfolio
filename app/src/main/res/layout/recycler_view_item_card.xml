<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/main_cardView"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/card_background"
	android:layout_margin="@dimen/default_layout_margin_halved" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center">
<!--
		<android.support.v4.view.ViewPager
			android:layout_width="match_parent"
			android:layout_height="300dp" />-->

		<ImageView
			android:id="@+id/app_photo_imageView"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:adjustViewBounds="true"
			android:scaleType="centerCrop"
			tools:src="@drawable/aihire_main"/>


		<TextView
			android:id="@+id/app_name_textView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:textColor="@android:color/white"
			android:paddingBottom="@dimen/default_layout_margin_halved"
			android:paddingTop="@dimen/default_layout_margin_halved"
			android:paddingLeft="@dimen/default_layout_margin_halved"
			android:background="@color/card_text_background"
			tools:text="AI Hire"
			android:layout_alignBottom="@+id/app_photo_imageView"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"/>


		<TextView
			android:id="@+id/app_description_textView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/default_layout_margin_halved"
			android:textSize="14sp"
			android:textColor="@color/fontColor"
			tools:text="Here is description. Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
			android:layout_below="@+id/app_photo_imageView"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"/>

	</RelativeLayout>

</android.support.v7.widget.CardView>